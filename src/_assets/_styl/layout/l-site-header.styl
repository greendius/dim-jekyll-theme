// Layout for Site's header
// =====

// Set column
#site-header
  // debug()
  width 100%
  
  #site-branding
    lost-column 1/1
    
    +desktop()
      lost-column 1/3
      
  #primary-nav
    lost-column 1/1
    
    +desktop()
      lost-column 2/3

// Site header
// -----
#site-header
  position fixed
  top 0
  left 0
  z-index 100

  width 100%
  height 100px

#site-header-inner
  width 100%
  height 100px // set height for vertical center in flex
  padding 15px 0
  text-align center
  
  +above('m')
    display flex
    //justify-content center
    align-items center
    text-align left

// Animated header
#site-header.shrink
  height 80px
  
  #site-header-inner
    padding 10px 0
    
  +desktop()
    height 70px

    #site-header-inner
      height 80px