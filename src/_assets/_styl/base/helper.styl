// Clearfix
.cf
  cf()

// Center element
.centered
  display block
  text-align center
  margin auto

// No-bullet list
.no-bullet
  list-style none
  
.no-select
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

// Muted text
.muted
  color $muted-color
  
// remove icon from any tag
.no-icon
  &::before,
  &::after
    display none !important
  
// Animation
.transition
  transition all 0.25s ease-in-out

.flipIn
  animation flipdown 0.5s ease both
  
