// HEADER
// =====

.page-header
  //debug()
  margin-top 100px
  margin-bottom $spacing
  text-align center
  
  +above('m')
    margin-top 180px

.page-title
  position relative
  margin auto
  margin-bottom $spacing

  padding-bottom 2px
  max-width 800px
  
  text-align center
  color $primary-color

  &::after
    content ''

    position absolute
    left 45%
    bottom -10px

    width 10%
    height: 3px

    background $primary-color

