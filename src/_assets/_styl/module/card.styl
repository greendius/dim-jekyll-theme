// Cards
// =====

.card
  //debug()
  display block
  margin $spacing 0
  
  border 1px solid $border-color
  box-shadow 0 2px 0 $primary-color
  border-radius 4px
  
  transition 100ms ease-out-sine
  
  .card-img // wrapper
    overflow hidden

    height 150px
    
    border-radius 4px
    border-bottom-right-radius 0
    border-bottom-left-radius 0
    
    transition 100ms ease-out-sine

    img
      display block
      height 100%
      width 100%
      object-fit cover
      object-position center

  .card-content // wrapper
    clear both
    overflow hidden

    width 100%
    height auto

    padding $spacing

    transition 100ms ease-out-sine
    
    +above('m')
      height 200px

    .card__title
      margin 0

    .card__date
      margin 0
      margin-bottom 5px
      fs .9rem
      color $muted-color

    .card__excerpt
      margin 0

      line-height 1.3
      fs .9rem
      color lighten( $font-color, 50% )

    .card__more
      margin-top 8px
      fs .9rem

  &:hover
    box-shadow 0 7px 0 $alt-color
    
    .card-img
      opacity .8

    .card-content
      background rgba( $gray, 1 )
