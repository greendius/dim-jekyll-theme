// Card
// =====

.card
  //debug()
  //border 1px solid $border-color
  display block
  margin $spacing 0
  border-radius: 2px
	
  .card-img // wrapper
    //margin-bottom 1px
		
  .card-content // wrapper
    overflow hidden
        
    width 100%
    height auto
        
    padding $spacing
    //padding-left $spacing
		
    border-bottom 1px solid $alt-color
    
    transition 100ms ease-out-sine
    
    +above('m')
      height 180px
		
    .card__title
      margin 0
      
    .card__date
      color $muted-color
			
    .card__excerpt
      margin 0

      line-height 1.3
      fs .9rem
      color lighten( $font-color, 50% )

    .card__more
      margin-top 8px
      fs .9rem
			
  &:hover
    .card-content
      background rgba( $gray, 1 )
      border-bottom-width 10px