// Topbar
// =====

#topbar
  position relative
  display flex
  align-items center
  z-index 99
  padding 5px 0
  
  fs 12px
  text-align center
  
  color #fff
  background #333
  
  +above('xl')
    max-height 30px
  
  p
    margin-bottom 0
  a
    color #fff
    
    &:hover
      color $action-color